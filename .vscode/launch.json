{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask: Run app.py",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development"
      },
      "args": [
        "run",
        "--no-debugger",       // VS Code already attaches the debugger
        "--no-reload"          // auto-reload handled by VS Code
      ],
      "jinja": true,
      "justMyCode": true
    }
  ]
}
